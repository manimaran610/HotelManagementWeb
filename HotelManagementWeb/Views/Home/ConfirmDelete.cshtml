@model HotelManagementWeb.Models.Room

<div class="modal fade" id="@Model.RoomId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Room - @Model.RoomNumber
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a type="button" class="btn btn-primary" style="width:75px" href="@Url.Action("DeleteRoom",new { Id = Model.RoomId })">Yes</a>
            </div>
        </div>
    </div>
</div>
